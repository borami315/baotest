pipeline {
  agent any
  stages {
    stage('git scm update') {
      steps {
        git url: 'https://github.com/borami315/testbao.git', branch: 'main'
      }
    }
    stage('delivery and deployment') {
      steps {
        sh '''
        ansible master -m copy -a "src=testpod.yml dest=/root/testpod.yml" --become
        now=$(date +%y%m%d%H%M)
        sudo docker build -t bao315/keduitlab:${now} .
        sudo docker push bao315/keduitlab:${now}
        ansible node -m shell -a "sudo docker pull bao315/keduitlab:${now}"
        ansible master -m shell -a "sudo kubectl create deploy web-${now} --replicas=3 --port=80 --image=bao31524/keduitlab:${now}"
        ansible master -m shell -a "sudo kubectl expose deploy web-${now} --type=LoadBalancer --port=80 --target-port=80 --name=web-${now}-svc"
        '''
      }
    }
  }
}